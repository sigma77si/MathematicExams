<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dev.sigma77.mathematicexams.MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="3"
    android:gravity="center"
>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:id="@+id/imageView"
        android:layout_weight="1"
        android:background="@drawable/pic_test"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:text="Задачи от Великденски математически състезания за деца от първи клас"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                style="@style/btnStyleShakes"/>

            <Button
                android:text="Задачи от други  състезания за деца от първи клас"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                style="@style/btnStyleArsenic"/>




            <Button
                android:text="Задачи от други  състезания за деца от първи клас"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                style="@style/btnStylePaprika"/>
            <Button
                android:text="Задачи от други  състезания за деца от първи клас"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                style="@style/btnStyleOrange"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
